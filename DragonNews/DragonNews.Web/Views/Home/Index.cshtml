@model List<DragonNews.Web.Models.NewsViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "News")
</p>
<table class="table">
    <tr>
        <th>
           Category
        </th>
        <th>
            Details
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @{var category = (DragonNews.News.NewsCategory)item.Category;}
            @category
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", "News", new { id = item.Id },null)
        </td>
    </tr>
}

</table>
